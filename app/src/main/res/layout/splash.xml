<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:gravity="center"
              android:orientation="vertical">

    <ImageView
        android:layout_width="128dp"
        android:layout_height="128dp"
        android:src="@drawable/ic_ac_unit"/>

    <Button
        android:id="@+id/splash_check_weather_button"
        style="@style/ButtonStyle"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:onClick="checkWeather"
        android:text="@string/check_weather"/>

    <TextView
        android:id="@+id/splash_location_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/acquiring_location"/>

</LinearLayout>